        <%= form.label :lname, "Last Name" %><br>
        <%= form.text_field :lname %>
    </p>
    <p>
        <%= form.label :email %><br>
        <%= form.text_field :email %>
    </p>
    <p>
        <%= form.label :thumbnail %><br>
        <%= form.text_field :thumbnail %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>