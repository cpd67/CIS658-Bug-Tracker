<% if !notice.blank? %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Listing Users</h1>
<table class="table table-striped table-hover table-sm">
    <thead>
        <tr>
            <th class="w-25">Name</th>
            <th class="w-25">Email</th>
            <th class="w-25">Thumbnail</th>
            <th class="w-25">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td class="w-25"><%= user.fname + " " + user.lname %></td>
                <td class="w-25"><%= user.email %></td>
                <td class="w-25"><%= user.thumbnail %></td>
                <td class="w-25">
                    <div class="btn-group">
                        <%= link_to user_path(user), class: "btn btn-info btn-sm", title: "Show", data: {toggle: "tooltip"} do %>
                            <i class="fas fa-eye"></i>
                        <% end %>
                        <%= link_to edit_user_path(user), class: "btn btn-secondary btn-sm", title: "Edit", data: {toggle: "tooltip"} do %>
                            <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to user_path(user), method: :delete, title: "Delete", data: { toggle: "tooltip", confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
                            <i class="fas fa-trash"></i>
                        <% end %>
                    </div>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
<%= link_to 'Bugs', bugs_path, class: "btn btn-secondary" %>