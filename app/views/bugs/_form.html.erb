<%= form_with model: @bug, local: true do |form| %>
    <% if @bug.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@bug.errors.count, "error") %> prohibited this article from being saved:
            </h2>
            <ul>
                <% @bug.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <p>
        <!-- https://cis.gvsu.edu/~kurmasz/Teaching/Courses/W20/CIS658/LectureNotes/DemoScripts/RailsDemo03.html -->
        <%= form.label :user_id %><br>
        <%= form.select :user_id, options_for_select(User.all.collect do |user| ["#{user.fname} #{user.lname}", user.id] end), {} %>
    </p>
    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
    </p>

    <p>
        <%= form.label :issue_type %><br>
        <%= form.select :issue_type, @issue_types.keys %>
    </p>

    <p>
        <%= form.label :priority %><br>
        <%= form.select :priority, @priorities.keys %>
    </p>

    <p>
        <%= form.label :status %><br>
        <%= form.select :status, @statuses.keys %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>
